<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="complexability.puremotionmusic.MainFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eight_bit_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/bit_piano" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sineWaveButton"
            android:src="@drawable/sinewave_ic"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/eight_bit_button" />
    </RelativeLayout>
</FrameLayout>
