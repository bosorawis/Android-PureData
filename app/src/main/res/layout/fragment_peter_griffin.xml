<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="complexability.puremotionmusic.Instruments.PeterGriffinFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/peter_griffin_bg">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/onOffButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:checked="false" />

        <complexability.puremotionmusic.Helper.DrawRightBall
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/draw_the_right_ball"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>
